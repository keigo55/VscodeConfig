{
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "window.openFilesInNewWindow": "on",
    "files.autoSave": "afterDelay",

    //Editor設定
    "editor.acceptSuggestionOnEnter": "off",
    "editor.cursorSurroundingLines": 5,
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.wordWrap": "on", //行末の折り返し有
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "boundary",
    "window.zoomLevel": 1,
    "editor.formatOnType": true,
    "editor.detectIndentation": false,
    "[cpp]": {
        "editor.tabSize": 4,
    },

    // ターミナル設定
    //"terminal.integrated.shell.windows": "C:\\Windows\\System32\\WindowsPowerShell\\v1.0\\powershell.exe",
    "terminal.integrated.shell.windows": "C:\\Windows\\System32\\wsl.exe",
    //"terminal.integrated.shell.windows": "C:\\cygwin64\\Cygwin.bat",

    "editor.tokenColorCustomizations": {
        "comments":"#898880",
        "textMateRules": [
            //{   // 数字の色変更
            //    "scope": "constant.numeric",
            //    "settings": {"foreground": "#c47fbe"}
            //},
            {   // データ型の色変更
                "scope": "storage.type",
                "settings": {"foreground": "#3cb37a"} // コバルトグリーン
            },
            {   // その他
                "scope": "source",
                "settings": {"foreground": "#d4d9db"} // リードグレイ
            },
            {   // 演算子の色変更
                "scope": "keyword.operator",
                "settings": {"foreground": "#fcc800"} // クロムイエロー
            },
            {   // 演算子の色変更
                "scope": "support",
                "settings": {"foreground": "#fc0000"} // クロムイエロー
            },
            //{   // 関数、引数の色変更
            //    "scope": "variable.",
            //    "settings": {"foreground": "#f11414"}
            //},
            //{   // ifやwhileの色変更
            //    "scope": "keyword.control",
            //    "settings": {"foreground": "#c7a04c"}
            //},
            //{   // constやstaticなどの色変更
            //    "scope": "storage.modifier",
            //    "settings": {"foreground": "#ff0000"}
            //},
        ]
    },

    // workbench
    "workbench.editor.enablePreview": false,
    "workbench.colorCustomizations": {
        // カーソル行の背景色
        //"editor.lineHighlightBackground": "#1A1A1A",
        // 背景色
        "editor.background": "#1F1F1F",
        // アクティブtabにバーを入れる
        "tab.activeBorder": "#00ff6a",
        // 選択したハイライト
        "editor.selectionBackground":"#303080",
        // 選択したやつと同じ箇所をハイライト
        "editor.selectionHighlightBackground":"#404040",
    },
    "editor.renderControlCharacters": false,


    // 拡張機能 ##############################################################3
        //Vim設定
    "vim.foldfix": true,
    "vim.useSystemClipboard": true, //ヤンクとクリップボードの共有
    "vim.hlsearch": true, //検索結果をハイライト
    "vim.ignorecase": true, //検索時に大文字小文字無視
    "vim.insertModeKeyBindings": [],
    // ウィンドウ移動のキーバインドをCtrl+w → sに変更
    "vim.normalModeKeyBindingsNonRecursive": [{
            "before": ["s"],
            "after": ["<C-w>"]
        },
        {
            "before": ["K"],
            "after": ["g","t"]
        },
        {
            "before": ["J"],
            "after": ["g","T"]
        },
    ],

    // Arduino
    "arduino.path": "C:\\Program Files (x86)\\Arduino",
    "arduino.commandPath": "arduino_debug.exe",

    //Spresense設定
    "spresense.msys.path": "c:\\msys64",
    "spresense.serial.port": "COM10",

    //plantuml設定
    "plantuml.commandArgs": [
        "-Xmx2g",
        "-DPLANTUML_LIMIT_SIZE=16384"
    ],
    "plantuml.render": "PlantUMLServer",
    "plantuml.server": "http://www.plantuml.com/plantuml",

    // C言語設定
    "C_Cpp.default.compilerPath": "",
    "C_Cpp.intelliSenseEngine": "Tag Parser",
    "C_Cpp.updateChannel": "Insiders",
    "C_Cpp.clang_format_style": "{ BasedOnStyle: LLVM, BreakBeforeBraces: Attach, SpaceBeforeParens: Never, IndentWidth: 4 }",
    //"C_Cpp.clang_format_style": "Google", //中括弧の自動改行停止

    // C#
    "csharpfixformat.style.braces.onSameLine": false,

    // indent_rainbow
    "indentRainbow.errorColor": "rgba(128,32,32,0.03)",
    "indentRainbow.colors": [
        "rgba(255,255,64,0.03)",
        "rgba(127,255,127,0.03)"
        //"rgba(255,127,255,0.03)",
        //"rgba(79,236,236,0.03kkk)"
    ],
}
